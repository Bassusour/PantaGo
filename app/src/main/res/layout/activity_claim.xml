<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClaimActivity">

    <Button
        android:id="@+id/buttonClaim"
        android:layout_width="181dp"
        android:layout_height="57dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="631dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="97dp"
        android:background="@drawable/claim_button_shape"
        android:text="@string/claim_button"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonCollect"
        android:layout_width="181dp"
        android:layout_height="57dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="503dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="71dp"
        android:background="@drawable/claim_button_shape"
        android:text="@string/collect"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonClaim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>